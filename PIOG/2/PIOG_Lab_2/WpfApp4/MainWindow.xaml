        <ComboBox x:Name="Month_choice" HorizontalAlignment="Left" Margin="200,138,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Month_choice_SelectionChanged"/>
        <ComboBox x:Name="Day_Choice" HorizontalAlignment="Left" Margin="366,138,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Day_Choice_SelectionChanged"/>
        <Label x:Name="Year" Content="Год:&#xD;&#xA;" HorizontalAlignment="Left" Margin="44,107,0,0" VerticalAlignment="Top" Height="26" Width="49"/>
        <Label x:Name="Mo" Content="Месяц:" HorizontalAlignment="Left" Margin="200,107,0,0" VerticalAlignment="Top" Width="76"/>
        <Label x:Name="day" Content="День:&#xD;&#xA;" HorizontalAlignment="Left" Margin="366,107,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
